        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.connection.autocommit">true</property>
        <mapping class="hiber.Employee" />
        <mapping class="hiber.Department" />
        <mapping class="hiber.Posts" />
        <mapping class="hiber.Salaries_paid" />
        <mapping class="hiber.Working_days" />
        <mapping class="hiber.employees_courses" />
        <mapping class="hiber.Courses" />
        <mapping class="hiber.Tangibles" />
